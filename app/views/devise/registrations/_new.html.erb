<div class="modal fade text-dark" id="signupModal">
    <div class="modal-dialogue">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Sign Up</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
<div class="modal-body">
    <form>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
     <label for="name">Your Name</label>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
     <label for="email">Your Email</label>
     <%= f.text_field :email, autofocus: true, class: "form-control" %>
    </div>
     <div class="form-group">
     <label for="language">Your Language</label>
      <%= f.select :language, ['Japanese', 'English'], {include_blank: 'Option'}, class: "form-control" %>
      </div>

      <div class="form-group">
      <label for="password">Password</label>
      <%= f.password_field :password, autocomplete: "パスワード", class:"form-control" %><br>
      </div>
     <% end %>
  </form>